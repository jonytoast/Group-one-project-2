<div class="row">
  <div class="col-auto">
    <h2 class="greeting">Welcome to your User Dashboard, {{username}}!</h2>
  </div>
</div>

<div id="search-bar-wrapper" class="row mt-4">
  <h3 class="section-title">Food Nutritional Facts Checker:</h3>
  <div class="form-group">
    <label for="food-query">Enter Food Name:</label>
    <input class="form-input" type="text" id="food-query" placeholder="for example: salmon"/>
    <button id="search" type="submit" class="btn btn-primary submit">Search</button>
  </div>
</div>

<div id="post-recipe-wrapper" class="row mt-4">
  <div class="col-md-6">
    <h3 class="section-title">Post a New Recipe:</h3>

    <form class="form new-recipe">
      <div class="form-group">
        <label for="recipe-name">Recipe Title:</label>
        <input class="form-input" type="text" id="recipe-name" placeholder="for example: Chicken Noodle Soupe"/>
      </div>
      <br>
      <div class="form-group">
        <label for="main-ingredient">Main Ingridient in Recipe:</label>
        <input class="form-input" id="main-ingridient" placeholder="for example: chicken"></input>
      </div>
      <br>
      <div class="form-group">
        <p>Enter Recipe Below:</p>
        <textarea class="form-input" id="recipe-text"></textarea>
      </div>
      <br>
      <div class="form-group">
        <button type="submit" class="btn btn-primary submit">Post Recipe</button>
      </div>
    </form>
  </div>

  {{#if recipes.length}}
  <div class="col-md-6 project-list">
    <h3>Your Recipe Posts:</h3>

    {{#each recipes as |recipe|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/recipe/{{recipe.id}}">{{recipe.title}}</a></h4>
      </div>
      <div class="col-md-2">
        <button class="btn btn-sm btn-danger" id="deletepostbutton" data-id="{{recipe.id}}">DELETE</button>
      </div>
      <div class="col-md-2">
        <button class="btn btn-sm btn-danger" id="updatepostbutton" data-id="{{recipe.id}}">UPDATE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
<script src="./js/nutrition.js"></script>
